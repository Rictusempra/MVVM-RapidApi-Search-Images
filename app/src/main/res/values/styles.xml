<resources>

    <style name="SearchEditText" parent="Widget.AppCompat.EditText">
        <item name="android:textSize">18sp</item>
        <item name="android:textColor">@color/black</item>
        <item name="android:textColorHint">@color/lightGray</item>
        <item name="android:fontFamily">@font/roboto_regular</item>
        <item name="android:background">@drawable/search_edit_text_bg</item>
        <item name="android:padding">8dp</item>
        <item name="android:layout_margin">16dp</item>
        <item name="android:elevation">8dp</item>
    </style>

    <style name="Text" parent="Widget.AppCompat.TextView">
        <item name="android:textSize">18sp</item>
        <item name="android:textColor">@color/lightGray</item>
        <item name="android:fontFamily">@font/roboto_regular</item>
        <item name="android:textAllCaps">true</item>
        <item name="android:alpha">0.6</item>
    </style>


    <style name="ProgressBarStyle">
        <item name="colorAccent">@color/accent</item>
    </style>

    <style name="Toolbar.TitleText" parent="TextAppearance.Widget.AppCompat.Toolbar.Title">
        <item name="android:textSize">18sp</item>
    </style>

</resources>
